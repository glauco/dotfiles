; Make sure our commits are correctly tagged with our name
[user]
  name = Glauco Vinicius
  email = gl4uc0@gmail.com

; Fix the editor path in Mac OSX lion and show whitespace
[core]
  editor = /usr/bin/vim
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

; Setup some colors to make git commands a bit more readable
[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "status"]
  added = green bold
  changed = red bold
  new = green bold

; Setup some git command aliases
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  dc = diff --cached
  l = log
